<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".Choices_Activity" android:id="@+id/relativeLayout">


    <ImageView
            android:layout_width="407dp"
            android:layout_height="301dp" app:srcCompat="@drawable/dialogpng" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="172dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Alin ang nais simulan?"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="268dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Leksiyon"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:background="@drawable/whitebg"
            android:layout_height="wrap_content" android:id="@+id/btnlesson"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="128dp"
            app:layout_constraintHorizontal_bias="0.28"/>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Pagsusulit"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/whitebg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnquiz"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" android:layout_marginTop="128dp"
            app:layout_constraintHorizontal_bias="0.737"/>
</androidx.constraintlayout.widget.ConstraintLayout>