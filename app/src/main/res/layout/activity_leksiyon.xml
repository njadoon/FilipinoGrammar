<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:layout_editor_absoluteY="185dp"
        tools:layout_editor_absoluteX="129dp"
        android:background="#FFFFFF"
        android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Leksiyon_Activity">


        <TextView
                android:text="Leksiyon I"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" android:id="@+id/lesson1"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"/>
        <View
                android:layout_width="390dp"
                android:layout_height="1500dp" android:id="@+id/view4"
                app:layout_constraintEnd_toEndOf="@+id/text1" app:layout_constraintTop_toTopOf="@+id/text1"
                app:layout_constraintBottom_toBottomOf="@+id/text1" app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text1" android:background="@drawable/background"/>
        <TextView
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:text="Ang salitang 'nang' ay isang pagsabay at ang salin nito sa ingles ay when so that\n\nHalimbawa: \na) 'Nagulat ako nang nakita ko sila'\nb) 'Kumain ka na, nang (sa ganoon ay) hindi ka na magutom'\n\nAng salitang nang ay nangangahulugan din ng isang pang-abay o pariralang pang-abay.\n\nInilalarawan ng pang-abay ang pandiwa, Halimbawa:\na) Kumain ka na. - Kumain ka nang marami.
\nb) Uminom ka. - Uminom ka nang kaunti.\nc) Sila ay tumakbo. - Sila ay tumakbo nang mabilis.\n"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="100dp"
        >
        </TextView>


        <Button
                android:text="next"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/whitebg"
                android:layout_height="wrap_content" android:id="@+id/btnnext"
                app:layout_constraintEnd_toEndOf="@+id/text1"
                app:layout_constraintStart_toStartOf="@+id/text1"
                app:layout_constraintTop_toBottomOf="@+id/text1"
                app:layout_constraintHorizontal_bias="0.541"
                android:layout_marginTop="40dp"/>
        <Button
                android:text="SKIP TO QUIZ"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/whitebg"
                android:layout_height="wrap_content" android:id="@+id/btnskip"
                app:layout_constraintEnd_toEndOf="@+id/btnnext"
                app:layout_constraintStart_toStartOf="@+id/btnnext"
                app:layout_constraintTop_toBottomOf="@+id/btnnext"
                app:layout_constraintHorizontal_bias="0.54"
                android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
