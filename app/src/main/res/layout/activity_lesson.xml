<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Lesson"
        android:background="@color/white">

    <View
            android:layout_width="wrap_content"
            android:layout_height="80dp" android:id="@+id/view"
            android:background="@drawable/background" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="100dp" android:id="@+id/view3"
            android:background="@drawable/bottom"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="Skip to quiz"
            android:layout_width="0dp"
            android:layout_height="55dp" android:id="@+id/skip"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/nextLesson"
            android:background="@drawable/button_1" android:foregroundGravity="center" android:gravity="center"
            android:layout_marginBottom="16dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
            android:textColor="@color/colorWhite" android:textSize="16sp" android:fontFamily="sans-serif-medium"/>
    <TextView
            android:text="Next Lesson"
            android:layout_width="0dp"
            android:layout_height="55dp" android:id="@+id/nextLesson"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/skip" app:layout_constraintHorizontal_bias="0.5"
            android:background="@drawable/button_2" android:foregroundGravity="center" android:gravity="center"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginBottom="16dp"
            android:textColor="@color/colorWhite" android:textSize="16sp" android:fontFamily="sans-serif-medium"
            android:drawableRight="@drawable/arrow1" android:paddingRight="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp" android:drawableTint="@android:color/background_light"/>
    <TextView
            android:text="Leksiyon I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lessonHeader"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:fontFamily="monospace" android:textSize="36sp"
            android:textColor="@color/colorWhite"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/lesson"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scrollbars="vertical" android:textSize="18sp"
            android:textColor="@color/colorWhite" android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_20sdp" android:paddingBottom="@dimen/_15sdp"
            android:background="@drawable/bg" android:drawablePadding="@dimen/_15sdp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view3" android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>